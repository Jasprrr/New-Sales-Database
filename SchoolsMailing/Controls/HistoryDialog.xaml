<ContentDialog
    x:Class="SchoolsMailing.Controls.HistoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SchoolsMailing.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="History"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    DataContext="{Binding CompanyViewModel, Source={StaticResource VmLocator}}">
    <TextBox x:Name="HistoryInput" 
             Text="{Binding invokedCompanyHistory.companyHistoryDetails, Mode=TwoWay}" 
             Margin="0,4,0,0" 
             MinHeight="120"
             MinWidth="320"
             ScrollViewer.VerticalScrollBarVisibility="Visible" 
             AcceptsReturn="True" 
             TextWrapping="Wrap" 
             Padding="10,3" 
             MaxWidth="600" 
             MaxHeight="420" />
</ContentDialog>
